<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Layout cho ngày bắt đầu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/bt_ngaybd"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/bogoctrai_doanhthu"
            android:padding="12dp"
            android:text="Ngày bắt đầu"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_ngaybd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="Ngày bắt đầu"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="14dp"
            android:background="@drawable/bogocphai_doanhthu"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Layout cho ngày kết thúc -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/bt_ngaykt"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/bogoctrai_doanhthu"
            android:padding="12dp"
            android:text="Ngày kết thúc"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_ngaykt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="Ngày kết thúc"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="14dp"
            android:background="@drawable/bogocphai_doanhthu"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Layout cho tính tổng doanh thu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/bt_tinhtien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tính doanh thu"
            android:textColor="#FFFFFF"
            android:background="@drawable/bogoc_doanhthu"
            android:padding="12dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_tinhtien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng doanh thu"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="16dp"
            android:background="#FFFFFF"
            android:textColor="#000000" />
    </LinearLayout>
</LinearLayout>
